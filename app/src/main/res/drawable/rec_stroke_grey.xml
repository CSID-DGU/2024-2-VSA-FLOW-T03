<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 투명한 배경 -->
    <solid android:color="@android:color/transparent" />

    <!-- 회색 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" /> <!-- 테두리 색상 -->

    <!-- 모서리 둥글게 설정 -->
    <corners android:radius="8dp" />

    <!-- 패딩 설정 -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
